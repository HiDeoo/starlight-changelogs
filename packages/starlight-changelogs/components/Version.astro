---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro'
import { getChangelogPath, type VersionProps } from '../libs/routing'
import Entry from './Entry.astro'
import { getVersionTitle } from '../libs/title'
import { getLink } from '../libs/link'

type Props = VersionProps

const { config, entry, locale } = Astro.props

// TODO(HiDeoo) title
// TODO(HiDeoo) headings
---

<StarlightPage
  frontmatter={{
    title: getVersionTitle(config, entry, locale),
    prev: entry.pagination.prev,
    next: entry.pagination.next,
  }}
>
  <a href={getLink(getChangelogPath(config, locale))}>Back to changelog</a>
  <Entry {entry} />
</StarlightPage>
