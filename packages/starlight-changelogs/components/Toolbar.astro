---
import type { CommonProps } from '../libs/routing'

import VersionList from './VersionList.astro'

interface Props {
  backLink?: string
  compareLink?: string
  link?:
    | {
        href: string
        provider: string
      }
    | undefined
  versions: CommonProps['versions']
}

const { backLink, compareLink, link, versions } = Astro.props
---

<div>
  {backLink && <a href={backLink}>{Astro.locals.t('starlightChangelogs.versions.all')}</a>}
  <VersionList {versions} />
  {link && <a href={link.href}>{Astro.locals.t('starlightChangelogs.version.open', { provider: link.provider })}</a>}
  {compareLink && <a href={compareLink}>{Astro.locals.t('starlightChangelogs.compare.label')}</a>}
</div>

<style>
  div {
    background-color: red;
  }
</style>
